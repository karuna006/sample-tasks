<body>
  <div class="shape-container">
    <div id="rectangle" ondragstart="drag(event)" draggable="true" class="shape rectangle" data-width="100" data-height="50">Rectangle</div>
    <div id="square" ondragstart="drag(event)" draggable="true" class="shape square" data-size="75">Square</div>
    <div id="circle" ondragstart="drag(event)" draggable="true" class="shape circle" data-size="50">Circle</div>
    <!-- Add other shapes as needed -->
  </div>  

  <div class="ground" ondrop="drop(event)" ondragover="allowDrop(event)">
    <!-- <p>Drop stalls here</p> -->
  </div>

  <!-- <script src="https://cdn.jsdelivr.net/npm/@interactjs/interactjs/dist/interact.min.js"></script> -->
  <!-- <script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script> -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
  <!-- <script src="script.js"></script> -->
   <script>
    let drop_data = "";
    function allowDrop(ev) {
      ev.preventDefault();
    }

    function drag(ev) {
      drop_data = ev.target.id;
      // console.log(ev.target.id);
    } 

    function drop(ev) {    
      ev.preventDefault();
      clone_data = $("#"+drop_data).clone(true);
      console.log(clone_data);
      $(".ground").append(clone_data);
      // console.log(drop_data);
    }
    
   </script>
